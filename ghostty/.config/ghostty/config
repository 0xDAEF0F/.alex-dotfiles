macos-titlebar-style = "hidden"
# title = " " # in case its not hidden
font-size=19

window-width=4000
window-height=4000

font-family="Iosevka Nerd Font Mono"
theme = "GruvboxDark"

quit-after-last-window-closed=true
confirm-close-surface = false

cursor-style = block
cursor-style-blink = true

shell-integration = detect
shell-integration-features = cursor

mouse-hide-while-typing = true
clipboard-trim-trailing-spaces = true

# send cmd keys as escape sequences for neovim (works through tmux)
keybind = cmd+s=text:\x1bs

# fix ctrl+tab for terminal applications
keybind = ctrl+tab=text:\x1b[9;5u
keybind = ctrl+shift+tab=text:\x1b[1;5Z

# pass ctrl+backspace through to applications
keybind = ctrl+backspace=text:\x1b[127;5u
