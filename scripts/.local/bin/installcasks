#!/usr/bin/env bash

# this script is idempotent in a practical sense because it will result in the
# "same" state of the system if run multiple times

# essentials
brew install --cask google-chrome
brew install --cask ghostty
brew install --cask raycast
brew install --cask 1password
brew install --cask cursor visual-studio-code
brew install --cask openinterminal # auto opens things in terminal

# communications
brew install --cask whatsapp
brew install --cask spotify
brew install --cask telegram

# productivity
brew install --cask proton-mail-bridge
brew install --cask bruno
brew install --cask vlc

# content creation
brew install --cask screen-studio
brew install --cask obs
brew install --cask keycastr
brew install --cask descript

# install yt-dlp
url="https://github.com/yt-dlp/yt-dlp/releases/latest/download/yt-dlp_macos"
target_path="$HOME/.local/bin/yt-dlp"
curl "$url" -L -o "$target_path" && chmod +x "$target_path"