// docs: "https://zed.dev/docs/configuring-zed"
// default settings `zed: open default settings`
{
  "project_panel": {
    "auto_fold_dirs": false
  },
  "edit_predictions": {
    "mode": "eager",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null
    },
    "enabled_in_assistant": false
  },
  "tab_bar": {
    "show": false
  },
  "use_smartcase_search": true,
  "icon_theme": "Material Icon Theme",
  "ui_font_family": "Iosevka Nerd Font Mono",
  "vertical_scroll_margin": 12,
  "features": {
    "edit_prediction_provider": "zed"
  },
  "show_edit_predictions": true,
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true
  },
  "current_line_highlight": "gutter",
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "vim": {
    "toggle_relative_line_numbers": true
  },
  "vim_mode": true,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "ui_font_size": 17,
  "ui_font_weight": 300,
  "buffer_font_size": 18,
  "buffer_font_family": "Iosevka Nerd Font Mono",
  "buffer_font_weight": 300,
  "terminal": {
    "shell": {
      "program": "fish"
    }
  },
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Gruvbox Material Dark Colorscheme"
  }
}
