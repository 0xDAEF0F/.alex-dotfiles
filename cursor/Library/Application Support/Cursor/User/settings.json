{
	"Lua.diagnostics.globals": [
		"vim"
	],
	"[go]": {
		"editor.defaultFormatter": "golang.go"
	},
	"[json]": {
		"editor.defaultFormatter": "biomejs.biome",
		"files.autoSave": "off"
	},
	"[jsonc]": {
		"editor.defaultFormatter": "vscode.json-language-features",
		"files.autoSave": "off"
	},
	"[lua]": {
		"editor.defaultFormatter": "JohnnyMorganz.stylua"
	},
	"[prisma]": {
		"editor.defaultFormatter": "Prisma.prisma"
	},
	"[python]": {
		"editor.defaultFormatter": "ms-python.black-formatter"
	},
	"[rust]": {
		"editor.defaultFormatter": "rust-lang.rust-analyzer"
	},
	"[toml]": {
		"editor.defaultFormatter": "tamasfe.even-better-toml"
	},
	"[typescript]": {
		"editor.defaultFormatter": "biomejs.biome",
		"editor.inlayHints.enabled": "off"
	},
	"[typescriptreact]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"biome.enabled": true,
	"biome.rename": true,
	"codesnap.containerPadding": "0.5em",
	"cursor-retrieval.canAttemptGithubLogin": true,
	"cursor.composer.shouldAllowCustomModes": true,
	"cursor.composer.shouldChimeAfterChatFinishes": true,
	"cursor.composer.showSuggestedFiles": true,
	"cursor.composer.textSizeScale": 1,
	"cursor.cpp.disabledLanguages": [],
	"cursor.cpp.enablePartialAccepts": true,
	"custom-ui-style.electron": {
		"frame": false // frameless window (no macos semaphore)
	},
	"custom-ui-style.font.sansSerif": "Iosevka Nerd Font Mono",
	"custom-ui-style.stylesheet": {
		".quick-input-widget": "top: 13vh !important"
	},
	"diffEditor.ignoreTrimWhitespace": true,
	"diffEditor.renderIndicators": false,
	"editor.codeActionsOnSave": {
		"quickfix.biome": "explicit",
		"source.organizeImports.biome": "explicit"
	},
	"editor.cursorSurroundingLines": 10, // scrolloff
	"editor.detectIndentation": true,
	"editor.experimental.preferTreeSitter": [
		"typescript",
	],
	"editor.fontFamily": "Iosevka Nerd Font Mono",
	"editor.fontLigatures": true,
	"editor.fontSize": 16,
	"editor.formatOnSave": true,
	"editor.formatOnType": true,
	"editor.hover.delay": 2000,
	"editor.inlayHints.fontSize": 9,
	"editor.inlayHints.maximumLength": 30,
	"editor.inlayHints.padding": false,
	"editor.lineHeight": 0,
	"editor.lineNumbers": "on",
	"editor.occurrencesHighlight": "off",
	"editor.renderLineHighlight": "gutter",
	"editor.scrollbar.horizontal": "hidden",
	"editor.scrollbar.vertical": "auto",
	"editor.scrollbar.verticalScrollbarSize": 8,
	"editor.selectionHighlight": false,
	"editor.semanticHighlighting.enabled": true, // it's not needed for some themes
	"editor.tabSize": 3,
	"editor.tokenColorCustomizations": {
		"comments": "#b0c4debc" // LightSteelBlue with 50% transparency
	},
	"editor.wordBasedSuggestions": "off",
	"editor.wordWrap": "on",
	"errorLens.enabled": true,
	"errorLens.messageBackgroundMode": "message",
	"errorLens.messageEnabled": true,
	"errorLens.scrollbarHackEnabled": true,
	"explorer.compactFolders": false,
	"explorer.confirmDelete": false,
	"explorer.confirmDragAndDrop": false,
	"explorer.confirmPasteNative": false,
	"extensions.experimental.affinity": {
		"asvetliakov.vscode-neovim": 1
	},
	"files.autoSave": "afterDelay",
	"files.autoSaveDelay": 0,
	"fontshortcuts.defaultFontSize": 12, // terminal
	"fontshortcuts.defaultTerminalFontSize": 16, // editor
	"fontshortcuts.step": 1,
	"git.autofetch": true,
	"git.confirmSync": false,
	"git.enableSmartCommit": true,
	"gitlens.codeLens.authors.enabled": false,
	"gitlens.codeLens.recentChange.enabled": false,
	"gitlens.currentLine.enabled": false,
	"gitlens.views.commitDetails.files.layout": "tree",
	"gitlens.views.fileHistory.avatars": false,
	"go.inlayHints.assignVariableTypes": true,
	"go.inlayHints.compositeLiteralFields": true,
	"go.inlayHints.functionTypeParameters": true,
	"go.inlayHints.parameterNames": true,
	"go.inlayHints.rangeVariableTypes": true,
	"go.survey.prompt": false,
	"go.toolsManagement.autoUpdate": true,
	"javascript.updateImportsOnFileMove.enabled": "always",
	"jumplist.jumpListCount": 2,
	"multiCommand.commands": [
		{
			"command": "multiCommand.gitStageAndCommitAi",
			"sequence": [
				"git.stageAll",
				"cursor.generateGitCommitMessage",
				"git.commit",
				"git.push"
			]
		}
	],
	"periscope.rgOptions": [
		"--smart-case",
		"--sortr path"
	],
	// excludes everything in the gitignore file by default
	"periscope.rgGlobExcludes": [
		"**/{build,dist}/**",
		"*lock"
	],
	"rust-analyzer.check.command": "clippy",
	"rust-analyzer.diagnostics.experimental.enable": true, // Default is false
	"rust-analyzer.diagnostics.styleLints.enable": true, // Default is false
	"rust-analyzer.imports.granularity.group": "crate",
	"rust-analyzer.inlayHints.parameterHints.enable": false,
	"rust-analyzer.restartServerOnConfigChange": true, // Default is false
	"rust-analyzer.runnables.extraEnv": {
		"PATH": "/Users/ale/.cargo/bin:${env:PATH}",
		"RUSTFLAGS": "-A warnings",
		"RUST_BACKTRACE": "0"
	},
	"rust-analyzer.semanticHighlighting.punctuation.enable": true, // Default is false
	"rust-analyzer.typing.triggerChars": "=.>{(",
	"scm.diffDecorationsGutterWidth": 4,
	"settings.cycle": [],
	"stylua.configPath": "/Users/ale/.config/stylua/stylua.toml",
	"svelte.enable-ts-plugin": true,
	"terminal.external.osxExec": "Ghostty.app",
	"terminal.integrated.enableMultiLinePasteWarning": "never",
	"terminal.integrated.fontLigatures": true,
	"terminal.integrated.fontSize": 13,
	"terminal.integrated.shellIntegration.enabled": true,
	"todohighlight.keywords": [
		{
			"backgroundColor": "#32302f",
			"border": "1px solid #1d2021",
			"borderRadius": "3px",
			"color": "#FF6467",
			"overviewRulerColor": "#8EC5FF",
			"text": "todo:"
		}
	],
	"typescript.inlayHints.functionLikeReturnTypes.enabled": true,
	"typescript.inlayHints.propertyDeclarationTypes.enabled": true,
	"typescript.inlayHints.variableTypes.enabled": true,
	"typescript.updateImportsOnFileMove.enabled": "always",
	"update.releaseTrack": "prerelease",
	"window.customTitleBarVisibility": "never",
	"window.newWindowDimensions": "maximized", // although window switching is not working
	"window.titleBarStyle": "native",
	"window.zoomLevel": 1,
	"workbench.colorCustomizations": {
		// squiggly lines
		"editorError.foreground": "#00000000",
		"editorInfo.foreground": "#00000000",
		// git vertical bar
		"editorOverviewRuler.infoForeground": "#00000000",
		"editorOverviewRuler.warningForeground": "#00000000",
		"editorWarning.foreground": "#00000000"
	},
	"workbench.colorTheme": "Gruvbox Dark Hard",
	"workbench.editor.openPositioning": "last",
	"workbench.fontAliasing": "antialiased",
	"workbench.hover.delay": null,
	"workbench.iconTheme": "material-icon-theme",
	"workbench.sideBar.location": "left",
	"workbench.statusBar.visible": false
}